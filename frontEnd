    <script>
        // ScrollovÃ¡nÃ­ pro navigaci
        let lastScrollTop = 0;
        let scrollTimeout;

        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            // Zobrazit header po scrollovÃ¡nÃ­ dolÅ¯ o vÃ­ce neÅ¾ 100px
            if (scrollTop > 100) {
                header.classList.add('visible');
            } else {
                header.classList.remove('visible');
            }
            
            lastScrollTop = scrollTop;
        });

        // Navigace mezi strÃ¡nkami
        function showPage(pageId) {
            // SkrÃ½t vÅ¡echny strÃ¡nky
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // SkrÃ½t vÅ¡echny ÄlÃ¡nky
            document.querySelectorAll('.articles-list').forEach(list => {
                list.classList.remove('active');
            });
            
            // Zobrazit vybranou strÃ¡nku
            document.getElementById(pageId).classList.add('active');
            
            // Aktualizovat navigaÄnÃ­ tlaÄÃ­tka
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            event.target.classList.add('active');
        }

        // ZobrazenÃ­ pÅ™edmÄ›tÅ¯
