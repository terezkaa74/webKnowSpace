    <script>
        // Scrollování pro navigaci
        let lastScrollTop = 0;
        let scrollTimeout;

        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            // Zobrazit header po scrollování dolů o více než 100px
            if (scrollTop > 100) {
                header.classList.add('visible');
            } else {
                header.classList.remove('visible');
            }
            
            lastScrollTop = scrollTop;
        });

        // Navigace mezi stránkami
        function showPage(pageId) {
            // Skrýt všechny stránky
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Skrýt všechny články
            document.querySelectorAll('.articles-list').forEach(list => {
                list.classList.remove('active');
            });
            
            // Zobrazit vybranou stránku
            document.getElementById(pageId).classList.add('active');
            
            // Aktualizovat navigační tlačítka
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            event.target.classList.add('active');
        }

        // Zobrazení předmětů
        function showSubject(subject) {
            // Skrýt všechny seznamy článků
            document.querySelectorAll('.articles-list').forEach(list => {
                list.classList.remove('active');
            });
            
            // Zobrazit články pro vybraný předmět
            document.getElementById(subject + '-articles').classList.add('active');
        }

        function hideSubjects() {
            document.querySelectorAll('.articles-list').forEach(list => {
                list.classList.remove('active');
            });
        }

        // Otevření článku (simulace)
        function openArticle(subject, topic) {
            alert(`Otevírám článek: ${topic} z předmětu ${subject}. \n\nToto by v plné verzi otevřelo detailní vzdělávací obsah!`);
        }

        // Kvízové otázky
        const quizData = {
            math: [
                {
                    question: "Kolik je 12 × 8?",
                    options: ["84", "96", "104", "92"],
                    correct: 1
                },
                {
                    question: "Co je výsledkem rovnice: 2x + 6 = 14?",
                    options: ["x = 3", "x = 4", "x = 5", "x = 6"],
                    correct: 1
                },
                {
                    question: "Kolik stupňů má součet úhlů v trojúhelníku?",
                    options: ["90°", "180°", "270°", "360°"],
                    correct: 1
                }
            ],
            science: [
                {
                    question: "Které je největší srdce v lidském těle?",
                    options: ["Pravá síň", "Levá síň", "Pravá komora", "Levá komora"],
                    correct: 3
                },
                {
                    question: "Co je chemická značka pro kyslík?",
                    options: ["O", "O2", "Ox", "Ky"],
                    correct: 0
                },
                {
                    question: "Jak rychle se šíří světlo?",
                    options: ["300 000 km/s", "150 000 km/s", "500 000 km/s", "100 000 km/s"],
                    correct: 0
                }
            ],
            history: [
                {
                    question: "Ve kterém roce vznikla Československá republika?",
                    options: ["1917", "1918", "1919", "1920"],
                    correct: 1
                },
                {
                    question: "Kdo byl první prezident Československa?",
                    options: ["Edvard Beneš", "Tomáš Garrigue Masaryk", "Václav Havel", "Ludvík Svoboda"],
                    correct: 1
                },
                {
                    question: "Kdy skončila druhá světová válka?",
                    options: ["1944", "1945", "1946", "1947"],
                    correct: 1
                }
            ],
            geography: [
                {
                    question: "Které je největší město České republiky?",
                    options: ["Brno", "Ostrava", "Praha", "Plzeň"],
                    correct: 2
                },
                {
                    question: "Která řeka protéká Prahou?",
                    options: ["Morava", "Vltava", "Labe", "Odra"],
                    correct: 1
                },
                {
                    question: "Kolik má Česká republika sousedních států?",
                    options: ["2", "3", "4", "5"],
                    correct: 2
                }
            ]
        };

        let currentQuiz = [];
        let currentQuestionIndex = 0;
        let score = 0;

        function startQuiz(subject) {
            currentQuiz = quizData[subject];
            currentQuestionIndex = 0;
            score = 0;
            
            document.getElementById('quiz-container').classList.add('active');
            showQuestion();
        }

        function showQuestion() {
            const question = currentQuiz[currentQuestionIndex];
            const quizContent = document.getElementById('quiz-content');
            
            quizContent.innerHTML = `
                <div class="question">Otázka ${currentQuestionIndex + 1}/${currentQuiz.length}: ${question.question}</div>
                <div class="options">
                    ${question.options.map((option, index) => `
                        <div class="option" onclick="selectAnswer(${index})">${option}</div>
                    `).join('')}
                </div>
                <div class="score">Skóre: ${score}/${currentQuiz.length}</div>
            `;
        }

        function selectAnswer(selectedIndex) {
            const question = currentQuiz[currentQuestionIndex];
            const options = document.querySelectorAll('.option');
            
            // Zobrazit správnou a špatnou odpověď
            options[selectedIndex].classList.add(selectedIndex === question.correct ? 'correct' : 'incorrect');
            options[question.correct].classList.add('correct');
            
            // Zvýšit skóre pokud je odpověď správná
            if (selectedIndex === question.correct) {
                score++;
            }
            
            // Pokračovat na další otázku po krátké pauze
            setTimeout(() => {
                currentQuestionIndex++;
                if (currentQuestionIndex < currentQuiz.length) {
                    showQuestion();
                } else {
                    showQuizResult();
                }
            }, 1500);
        }

        function showQuizResult() {
            const quizContent = document.getElementById('quiz-content');
            const percentage = Math.round((score / currentQuiz.length) * 100);
            
            let message = '';
            if (percentage >= 80) {
                message = 'Výborně! 🌟';
            } else if (percentage >= 60) {
                message = 'Dobře! 👍';
            } else {
                message = 'Zkuste to znovu! 💪';
            }
            
            quizContent.innerHTML = `
                <div style="text-align: center; padding: 2rem;">
                    <h2>${message}</h2>
                    <div class="score" style="font-size: 2rem; margin: 2rem 0;">
                        ${score}/${currentQuiz.length} (${percentage}%)
                    </div>
                    <button class="btn btn-primary" onclick="backToGames()">Zpět na hry</button>
                    <button class="btn btn-secondary" onclick="startQuiz('${getCurrentQuizSubject()}')" style="margin-left: 1rem;">Hrát znovu</button>
                </div>
            `;
        }

        function getCurrentQuizSubject() {
            // Zjistí aktuální předmět kvízu na základě dat
            for (const subject in quizData) {
                if (quizData[subject] === currentQuiz) {
                    return subject;
                }
            }
            return 'math';
        }

        function backToGames() {
            document.getElementById('quiz-container').classList.remove('active');
        }

        // Přidat animace při načtení stránky
        window.addEventListener('load', () => {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.5s ease';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });
    </script>
</body>
</html>
